{
    "name": "amrit-next-sovereign",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "audit": "npm run lint && npm run typecheck && npm run test:unit",
        "antigravity:fix": "npm run lint:fix && npm run format",
        "dev": "next dev",
        "build": "prisma generate && next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc --noEmit",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "vitest",
        "test:integration": "vitest --config vitest.integration.config.ts",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:coverage": "vitest --coverage",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "tsx scripts/seed.ts",
        "db:studio": "prisma studio",
        "clean": "rimraf .next out node_modules/.cache",
        "prepare": "husky"
    },
    "dependencies": {
        "@ai-sdk/openai": "^3.0.10",
        "@prisma/client": "^5.22.0",
        "@radix-ui/react-separator": "^1.1.8",
        "@sanity/client": "^7.13.2",
        "@sanity/image-url": "^2.0.2",
        "@sanity/vision": "^3.0.0",
        "@types/nodemailer": "^7.0.4",
        "ai": "^6.0.34",
        "axios": "^1.13.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "framer-motion": "^11.2.0",
        "lucide-react": "^0.378.0",
        "mime": "^4.1.0",
        "next": "14.2.3",
        "next-sanity": "^9.12.3",
        "next-themes": "^0.4.6",
        "nodemailer": "^7.0.12",
        "qs": "^6.14.1",
        "razorpay": "^2.9.6",
        "react": "^18",
        "react-dom": "^18",
        "resend": "^6.7.0",
        "sanity": "^3.99.0",
        "styled-components": "^6.2.0",
        "tailwind-merge": "^2.3.0",
        "zod": "^3.23.0",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react": "^4.3.0",
        "autoprefixer": "^10.4.19",
        "eslint": "^8",
        "eslint-config-next": "14.2.3",
        "husky": "^9.0.0",
        "lint-staged": "^15.2.0",
        "playwright": "^1.48.0",
        "postcss": "^8",
        "prettier": "^3.2.0",
        "prettier-plugin-tailwindcss": "^0.6.0",
        "prisma": "^5.20.0",
        "rimraf": "^6.0.0",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "tsx": "^4.19.0",
        "typescript": "^5",
        "vitest": "^2.1.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css}": [
            "prettier --write"
        ]
    }
}
